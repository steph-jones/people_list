<h1>New Person</h1>
<%= form_for @person do |f| %>
  <p> <%= f.label :first_name %>
  <%= f.text_field :first_name %> </p>

  <p> <%= f.label :last_name %>
  <%= f.text_field :last_name %> </p>

  <p> <%= f.label :age %>
  <%= f.number_field :age, min: 1, max: 110 %> </p>
  
  <p> <%= f.label :hair_color %>
  <%= f.text_field :hair_color %> </p>

  <p> <%= f.label :eye_color %>
  <%= f.select :eye_color, ['blue', 'green', 'brown', 'hazel', 'black like their soul']%> </p>

  <p> <%= f.label :gender %>
  <%= f.select :gender, ['female', 'male', 'other']%> </p>
  
  <p> <%= f.label :alive? %>
  <%= f.select :alive, ['true', 'false']%> </p>

  <p> <%= f.label :hogwarts_house %> 
  <%= f.select :hogwarts_house, ['Gryffindor', 'Hufflepuff', 'Ravenclaw', 'Slytherin']%> </p>

  <p> <%= f.label 'Star Wars home planet:' %> 
  <%= f.select :planet, [Faker::Movies::StarWars.planet]%> </p>
  
  <%= f.submit %>
<% end %>